<!DOCTYPE html>
<html>
  <head>
    <title>Customer Info</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="main-div">
      <form class="date-range-form" action="<%=api_orders_url%>" method="get">
        <div class="Start-date-div">
          Start Month
          <input type="text" name="start_date[month]" value="" class="date-input">
          Start Day
          <input type="text" name="start_date[day]" value="" class="date-input">
          Start Year
          <input type="text" name="start_date[year]" value="" class="date-input">
        </div>
        <div class="end-date-div">
          End Month
          <input type="text" name="end_date[month]" value="" class="date-input">
          End Day
          <input type="text" name="end_date[day]" value="" class="date-input">
          End Year
          <input type="text" name="end_date[year]" value="" class="date-input">
          <input type="submit" name="API" value="Find Orders by Date Range" class="Date-Range-Submit">
          <input type="submit" name="CSV" value="Export to CSV" class="Date-Range-Submit">
        </div>
      </form>


      <form class="customer-search" action="<%=api_customer_url("customer_id")%>" method="get">
        <input id="customer_id" type="text" name="customer_id" value="">
        <input type="submit" name="" value="Search By Customer Id">
      </form>

    </div>
    <%= yield %>
  </body>
</html>
